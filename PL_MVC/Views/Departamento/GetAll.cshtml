@model ML.Departamento


@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Departamentos</h2>

<div class="container">
    <div class="row">
        <div style="float:right; margin-bottom:1rem;">
            @Html.ActionLink("+", "Form", "Departamento", htmlAttributes: new { @class = "btn btn-success btn-lg" })
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <td>Editar</td>
                    <td class="hidden">IdDepartamento</td>
                    <td>Nombre</td>
                    <td>IdArea</td>
                    <td>Eliminar</td>
                </tr>
            </thead>
            <tbody>
                @foreach (ML.Departamento departamento in Model.Departamentos)
                {
                    <tr>
                        <td class="text-center"><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("Form", "Departamento", new { IdDepartamento = departamento.IdDepartamento })"></a></td>
                        <td class="hidden">@departamento.IdDepartamento</td>
                        <td class="text-center">@departamento.Nombre</td>
                        <td class="text-center">@departamento.Area.IdArea</td>



                        <td class="text-center"><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "Alumno", new { IdDepartamento = departamento.IdDepartamento })" onclick="return confirm('Estas seguro que deseas eliminar este registro?');" ></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>